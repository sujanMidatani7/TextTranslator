  margin-bottom: 20px;
}

/* Centered text styles */
.center-text {
  text-align: center;
  margin-bottom: 20px;
  font-size: 24px;
}

/* Main content styles */
.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: #ffffff;  */
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add a subtle shadow */
