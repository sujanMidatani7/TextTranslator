/* Select box and input styles */
#languageSelect,
#languageSelect1,
#textInput {
  width: 100%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

/* Translate button styles */
#translateButton {
  background-color: #37434f;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#translateButton:hover {
  background-color: #27292b; /* Darker shade on hover */
}

/* Result box styles */
#translationResult {
